---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Modern Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/img1.jpeg" 
        alt="Beautiful sky background" 
        class="w-full h-full object-cover"
      />
      <!-- Subtle overlay for text readability -->
      <div class="absolute inset-0 bg-black/20"></div>
    </div>
    
    <!-- Centered Hero Content -->
    <div class="relative z-10 max-w-5xl mx-auto px-6 text-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <div class="inline-flex items-center px-4 py-2 rounded-full bg-white/20 backdrop-blur-sm text-white text-sm font-medium uppercase tracking-wider">
            Literary Magazine
          </div>
          <h1 class="text-6xl md:text-7xl lg:text-9xl font-display font-bold tracking-tight leading-none text-white">
            UDAAN
          </h1>
          <p class="text-xl md:text-2xl text-white/90 font-light">
            The Students' Magazine
          </p>
        </div>
        
        <p class="text-xl md:text-2xl text-white/80 max-w-3xl mx-auto leading-relaxed font-light">
          A curated collection of literary excellence, creative expression, and artistic innovation from tomorrow's voices.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
          <a href="/pdfs/issue1.pdf" class="bg-white text-black px-8 py-4 rounded-full font-medium hover:bg-gray-100 transition-all duration-200 text-lg">
            Read Latest Issue
          </a>
          <a href="/gallery" class="border-2 border-white text-white px-8 py-4 rounded-full font-medium hover:bg-white hover:text-black transition-all duration-200 text-lg">
            Explore Works
          </a>
        </div>
        
        <!-- Centered Stats -->
        <div class="grid grid-cols-3 gap-8 pt-16 max-w-2xl mx-auto">
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-white">50+</div>
            <div class="text-sm text-white/70 uppercase tracking-wider">Contributors</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-white">12</div>
            <div class="text-sm text-white/70 uppercase tracking-wider">Issues</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-white">5k+</div>
            <div class="text-sm text-white/70 uppercase tracking-wider">Readers</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/70">
      <div class="flex flex-col items-center text-xs font-medium">
        <span class="mb-2 uppercase tracking-widest">Scroll Down</span>
        <svg class="w-5 h-5 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </section>

  <!-- Features Grid Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Section Header -->
      <div class="max-w-3xl mb-20">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          What Makes Us Different
        </h2>
        <p class="text-xl text-gray-600 leading-relaxed">
          We're not just another magazine. We're a platform for authentic student voices, 
          innovative storytelling, and creative excellence.
        </p>
      </div>
      
      <!-- Features Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature Card 1 -->
        <div class="group">
          <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 h-full hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold mb-4">Literary Excellence</h3>
            <p class="text-gray-600 leading-relaxed">
              Curated poetry, short stories, and essays that push creative boundaries and explore diverse perspectives.
            </p>
          </div>
        </div>
        
        <!-- Feature Card 2 -->
        <div class="group">
          <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 h-full hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold mb-4">Visual Storytelling</h3>
            <p class="text-gray-600 leading-relaxed">
              Photography, illustrations, and visual art that complement and enhance our written content.
            </p>
          </div>
        </div>
        
        <!-- Feature Card 3 -->
        <div class="group">
          <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 h-full hover:shadow-lg transition-all duration-300">
            <div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-display font-bold mb-4">Community Focus</h3>
            <p class="text-gray-600 leading-relaxed">
              Building connections between writers, artists, and readers through collaborative creative expression.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Issue Showcase -->
  <section class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div class="space-y-8">
          <div>
            <div class="inline-flex items-center px-3 py-1 rounded-full bg-black text-white text-xs font-medium uppercase tracking-wider mb-4">
              Latest Issue
            </div>
            <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
              Volume 1: Genesis
            </h2>
            <p class="text-xl text-gray-600 leading-relaxed mb-8">
              Our inaugural issue explores themes of origin, creativity, and new beginnings. 
              Featuring diverse voices from emerging student writers and artists.
            </p>
          </div>
          
          <!-- Issue Stats -->
          <div class="grid grid-cols-2 gap-8 p-6 bg-white rounded-xl border border-gray-200">
            <div>
              <div class="text-2xl font-display font-bold">24 Pages</div>
              <div class="text-sm text-gray-600">Premium Content</div>
            </div>
            <div>
              <div class="text-2xl font-display font-bold">8 Artists</div>
              <div class="text-sm text-gray-600">Featured Contributors</div>
            </div>
          </div>
          
          <a href="/pdfs/issue1.pdf" class="btn btn-primary inline-flex">
            Read Full Issue
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
        
        <!-- Magazine Cover -->
        <div class="relative">
          <div class="aspect-[3/4] bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200">
            <img 
              src="/images/issue1-cover.png" 
              alt="Genesis Issue Cover" 
              class="w-full h-full object-cover"
            />
          </div>
          
          <!-- Decorative Elements -->
          <div class="absolute -top-6 -right-6 w-24 h-24 bg-yellow-300 rounded-full opacity-60"></div>
          <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-blue-400 rounded-full opacity-40"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contributors Highlight -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
          Meet Our Contributors
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Talented students from diverse backgrounds bringing their unique perspectives to our pages.
        </p>
      </div>
      
      <!-- Contributors Grid -->
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300">
          <div class="w-20 h-20 bg-gray-200 rounded-full mx-auto mb-6"></div>
          <h3 class="text-xl font-display font-bold mb-2">Literary Writers</h3>
          <p class="text-gray-600 mb-4">Poets and storytellers crafting compelling narratives</p>
          <div class="text-3xl font-display font-bold text-black">25+</div>
        </div>
        
        <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300">
          <div class="w-20 h-20 bg-gray-200 rounded-full mx-auto mb-6"></div>
          <h3 class="text-xl font-display font-bold mb-2">Visual Artists</h3>
          <p class="text-gray-600 mb-4">Photographers and illustrators capturing moments</p>
          <div class="text-3xl font-display font-bold text-black">15+</div>
        </div>
        
        <div class="bg-gradient-to-br from-gray-50 to-white border border-gray-200 rounded-2xl p-8 text-center hover:shadow-lg transition-all duration-300">
          <div class="w-20 h-20 bg-gray-200 rounded-full mx-auto mb-6"></div>
          <h3 class="text-xl font-display font-bold mb-2">Editors</h3>
          <p class="text-gray-600 mb-4">Curators ensuring quality and coherence</p>
          <div class="text-3xl font-display font-bold text-black">8+</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-24 bg-black text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
        Ready to Join Our Community?
      </h2>
      <p class="text-xl text-gray-300 mb-12 max-w-2xl mx-auto">
        Whether you're a writer, artist, or simply someone who appreciates creative expression, 
        there's a place for you in the UDAAN community.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-black px-8 py-4 rounded-full font-medium hover:bg-gray-100 transition-all duration-200">
          Submit Your Work
        </a>
        <a href="/gallery" class="border border-white text-white px-8 py-4 rounded-full font-medium hover:bg-white hover:text-black transition-all duration-200">
          Browse Gallery
        </a>
      </div>
    </div>
  </section>
</Layout>
</Layout>
