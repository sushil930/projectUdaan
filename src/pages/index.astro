---
import Layout from '../layouts/Layout.astro';
import ValueIcons from '../components/ValueIcons.astro';
import PatronHighlights from '../components/PatronHighlights.astro';
import FeaturedIssue from '../components/FeaturedIssue.astro';
import VideoEmbed from '../components/VideoEmbed.astro';
import SubmissionCategories from '../components/SubmissionCategories.astro';
---

<Layout>
  <!-- Hero Section with Background Image -->
  <section class="hero-section relative min-h-screen flex items-center justify-center text-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/img1.jpeg" 
        alt="Background" 
        class="w-full h-full object-cover"
      />
      <!-- Dark Overlay for Text Readability -->
      <div class="absolute inset-0 bg-black/30"></div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 max-w-4xl mx-auto px-6">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-white mb-6 leading-tight">
        <span class="bg-gradient-to-r from-yellow-300 via-orange-300 to-pink-300 bg-clip-text text-transparent">
          UDAAN
        </span>
      </h1>
      <h2 class="text-2xl md:text-4xl lg:text-5xl font-semibold text-white mb-4">
        The Students' Magazine
      </h2>
      <p class="text-lg md:text-xl lg:text-2xl text-blue-100 mb-8 max-w-2xl mx-auto leading-relaxed">
        Soaring High with the Wings of Expression
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="/pdfs/issue1.pdf" 
          class="bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-black font-semibold px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
        >
          View Latest Issue
        </a>
        <a 
          href="/gallery" 
          class="border-2 border-white text-white hover:bg-white hover:text-black font-semibold px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105"
        >
          Explore Gallery
        </a>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Main Content Sections -->
  <div class="bg-white">
    <ValueIcons />
    <PatronHighlights />
    <FeaturedIssue />
    <VideoEmbed />
    <SubmissionCategories />
  </div>
</Layout>
