---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
---

<Layout title="Contact Us | UDAAN">
  <section class="py-16">
    <div class="container mx-auto">
      <h1 class="text-4xl font-bold text-navy mb-12 text-center">Contact Us</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-bold text-navy mb-4">Get in Touch</h2>
          <form name="contact" method="POST" data-netlify="true">
            <div class="mb-4">
              <label class="block text-charcoal mb-2" for="name">Name</label>
              <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-coral">
            </div>
            <div class="mb-4">
              <label class="block text-charcoal mb-2" for="email">Email</label>
              <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-coral">
            </div>
            <div class="mb-4">
              <label class="block text-charcoal mb-2" for="message">Message</label>
              <textarea id="message" name="message" rows="5" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-coral"></textarea>
            </div>
            <Button type="submit">Send Message</Button>
          </form>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-navy mb-4">Submission Guidelines</h2>
          <p class="text-charcoal mb-4">We welcome submissions of poetry, fiction, non-fiction, and art. Please read our guidelines carefully before submitting your work.</p>
          <ul class="list-disc list-inside text-charcoal">
            <li class="mb-2">Submit only original, unpublished work.</li>
            <li class="mb-2">For poetry, submit up to 5 poems in a single document.</li>
            <li class="mb-2">For fiction and non-fiction, submit one piece up to 5,000 words.</li>
            <li class="mb-2">For art, submit up to 10 images in a single portfolio.</li>
            <li class="mb-2">Include a brief bio in your cover letter.</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>