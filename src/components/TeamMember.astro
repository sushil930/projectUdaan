---
export interface Props {
  name: string;
  role: string;
  imageUrl: string;
}

const { name, role, imageUrl } = Astro.props;
---

<div class="text-center">
  <img src={imageUrl} alt={name} class="w-48 h-48 mx-auto rounded-full object-cover mb-4">
  <h3 class="text-xl font-bold text-navy">{name}</h3>
  <p class="text-charcoal">{role}</p>
</div>